nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    test("Should run without failures") {

        when {
            params {
                // define parameters here. Example: 
                // outdir = "tests/results"

                input_file = "${projectDir}/greetings.csv"
            }
        }

        then {
            assert workflow.success  // asserts that the overall pipelin completed successfully.
            assert workflow.trace.tasks().size() == 6  // asserts that the number of processes run == 6 (2 different processes run on each of the 3 greetings in greetings.csv).
        }

    }

}
